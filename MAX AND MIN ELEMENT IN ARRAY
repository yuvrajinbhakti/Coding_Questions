//C++

pair<long long, long long> getMinMax(long long a[], int n) {
   long long maxi=*max_element(a,a+n);
   long long mini=*min_element(a,a+n);
   pair<long long ,long long> ans;
  
   
   ans.first=mini;
   ans.second=maxi; 
       return ans;
}
