//GFG QUESTION LINK - https://practice.geeksforgeeks.org/problems/peak-element/1

//C++
class Solution
{
    public:
    int peakElement(int arr[], int n)
    {
        int ans=0,maxi=INT_MIN;
        for(int i=0;i<n;i++){
            if(maxi<arr[i]){
                maxi=arr[i];
                ans=i;
            }
        }
        return ans;
    }
};
